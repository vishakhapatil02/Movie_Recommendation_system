<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Recommended Movies</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background-color: #f4f6f9;
      color: #333;
    }
    .topbar {
      height: 60px;
      background-color: #1f1f2e;
      padding: 0 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .topbar a {
      color: white;
      text-decoration: none;
      margin-right: 15px;
    }
    
    .topbar .btn {
      margin-left: 10px;
    }

    .content-area {
      padding: 30px;
    }
    .movie-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }
    .movie-card {
      position: relative;
      width: 200px;
      border-radius: 10px;
      overflow: hidden;
    }
    .poster-wrapper {
      width: 100%;
      height: 300px;
      overflow: hidden;
      border-radius: 10px;
    }
    .movie-poster {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .overlay {
      position: absolute;
      bottom: 0;
      background: rgba(0, 0, 0, 0.7);
      color: white;
      width: 100%;
      padding: 12px;
      text-align: center;
      opacity: 0;
      transform: translateY(100%);
      transition: 0.3s ease;
    }
    .movie-card:hover .overlay {
      opacity: 1;
      transform: translateY(0);
    }
    .overlay-buttons {
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin-top: 10px;
    }
    .overlay-buttons .btn {
      font-size: 14px;
      padding: 6px 10px;
      border: none;
      background: white;
      color: black;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
    }
  </style>
</head>
<body>

  <!-- Top Navbar -->
  <div class="topbar">
    <div>
      <a href="/">üè† Back to Home</a>
    </div>
    <div>
      <a href="/loginpage" class="btn btn-light" style=" color:#1f1f2e">Login</a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="content-area">
    <h2 class="mb-4">üé¨ Your Personalized Recommendations</h2>

    <div class="movie-grid">
  <% recommendedMovies.forEach(movie => { %>
    <div class="movie-card">
      <div class="poster-wrapper">
        <img src="<%= movie.poster_url %>" class="movie-poster" alt="<%= movie.title %>">
        <div class="overlay">
          <h5><%= movie.title %></h5>
          <div class="overlay-buttons">
            <a href="<%= movie.trailer_url %>" target="_blank" class="btn">Watch Trailer</a>

            <% if (user) { %>
              <a href="<%= movie.movie_url %>" class="btn" target="_blank">Watch Movie</a>
              <form action="/watchlistpage/addWatchlist" method="POST">
                <input type="hidden" name="movie_id" value="<%= movie.movie_id %>">
                <button type="submit" class="btn btn-primary">Add to Watchlist</button>
              </form>
            <% } else { %>
             <a href="/loginpage?reason=loginFirst" class="btn btn-secondary">Watch Movie</a>
             <a href="/loginpage?reason=loginFirst" class="btn btn-secondary">Add to Watchlist</a>


            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
  </div>

</body>
</html>
