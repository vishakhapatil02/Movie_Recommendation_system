<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Your Watchlist</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
  <style>
    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background-color: #f4f6f9;
      color: #333;
    }

    .dashboard { display: flex; height: 100vh; overflow: hidden; }
    .sidebar {
      width: 240px;
      background-color: #1f1f2e;
      color: #fff;
      padding: 20px;
      display: flex;
      flex-direction: column;
    }

    .sidebar h2 { text-align: center; color: #fff; margin-bottom: 20px; }
    .nav-link {
      color: #ddd;
      text-decoration: none;
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 8px 12px;
      border-radius: 6px;
    }

    /* .nav-link.active,
    .nav-link:hover {
      background-color: #333950;
      color: #fff;
    } */

     .sidebar a:hover,
    .sidebar a.active {
      background-color: #333950;
      color: #fff;
    }

    .main { flex-grow: 1; display: flex; flex-direction: column; }
    .topbar {
      height: 60px;
      background-color: #fff;
      padding: 0 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid #ddd;
    }

    .search-input {
      border: 1px solid #ccc;
      padding: 8px 12px;
      border-radius: 4px;
      width: 300px;
    }

    .profile-dropdown { position: relative; }
    .profile-btn {
      border: none;
      background: none;
      font-weight: bold;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .profile-btn .material-icons {
      font-size: 40px;
      color: #555;
    }

    .profile-content {
      display: none;
      position: absolute;
      right: 0;
      top: 110%;
      background: white;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
      padding: 10px;
      min-width: 180px;
      z-index: 10;
      border-radius: 6px;
    }

    .profile-dropdown:focus-within .profile-content,
    .profile-dropdown:hover .profile-content {
      display: block;
    }

    .logout-btn {
      margin-top: 8px;
      padding: 6px 12px;
      background-color: #e74c3c;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 14px;
      cursor: pointer;
      width: 100%;
    }

    .content-area {
      padding: 20px;
      overflow-y: auto;
      background-color: #f9f9fb;
      flex-grow: 1;
    }

    .movie-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .movie-card {
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      padding: 15px;
      text-align: center;
      transition: transform 0.3s ease;
    }

    .movie-card:hover { transform: scale(1.03); }
    .movie-card img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .movie-card h3 { margin: 0; font-size: 18px; color: #222; }
    .movie-card p { margin: 5px 0; color: #666; }

    .watch-btn {
      display: inline-block;
      margin-top: 10px;
      padding: 8px 12px;
      background-color: #3498db;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-size: 14px;
    }

    .remove-btn {
      margin-top: 6px;
      padding: 6px 10px;
      background-color: #e74c3c;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 13px;
      cursor: pointer;
    }

    .nav-link.active-btn {
      background-color: #333950;
      color: #fff;
    }
  </style>
</head>

<body>
  <div class="dashboard">
    <!-- Sidebar -->
    <nav class="sidebar">
      <h2>üéÆ MyMovies</h2>
      <a href="/userDashboard" class="nav-link"><span class="material-icons">video_library</span>Recommendations</a>
      <a href="/watchlistpage/watlistmovies" class="nav-link active"><span class="material-icons">stars</span><%= user.name %>'s Watchlist</a>
      <a href="/liked" class="nav-link"><span class="material-icons">favorite</span> Liked</a>
      <a href="/ratedmovies" class="nav-link"><span class="material-icons">star</span> Rated Movies</a>
      <a href="/recent" class="nav-link"><span class="material-icons">history</span> Recently Watched</a>
    </nav>

    <!-- Main Content -->
    <div class="main">
      <!-- Topbar -->
      <header class="topbar">
        <input type="text" class="search-input" placeholder="Search movies by title or genre" oninput="liveSearch(this.value)" />
        <% if (user) { %>
        <div class="profile-dropdown" tabindex="0">
          <button class="profile-btn">
            <span class="material-icons">account_circle</span>
            <%= user.name %>
          </button>
          <div class="profile-content">
            <p><strong><%= user.name %></strong></p>
            <p><%= user.email %></p>
            <form action="/logout" method="POST" onsubmit="return confirm('Are you sure you want to logout the account?');">
              <button class="logout-btn" type="submit">Logout</button>
            </form>
          </div>
        </div>
        <% } %>
      </header>

      <!-- Watchlist Movies -->
      <main class="content-area">
        <h3><%= user.name %>'s Watchlist</h3>
        <div class="movie-grid" id="movieGrid">
          <% if (movies.length > 0) { %>
            <% movies.forEach((movie) => { %>
              <div class="movie-card">
                <a href="<%= movie.movie_url %>" target="_blank">
                  <img src="<%= movie.poster_url %>" alt="Poster">
                </a>
                <h3><%= movie.title %></h3>
                <p><%= movie.genre %></p>
                <a href="<%= movie.movie_url %>" target="_blank" class="watch-btn">‚ñ∂Ô∏è Watch Now</a>
                <form action="/watchlistpage/watchlist/remove" method="POST" onclick="return confirm('Are you sure you want to remove this movie?');">
                  <input type="hidden" name="movie_id" value="<%= movie.movie_id %>">
                  <button type="submit" class="remove-btn">üóëÔ∏è Remove</button>
                </form>
              </div>
            <% }) %>
          <% } else { %>
            <p style="text-align:center; font-size:18px;">‚ö†Ô∏è You haven't added any movies to your watchlist yet.</p>
          <% } %>
        </div>
      </main>
    </div>
  </div>

  <!-- Live Search Script -->
  <script>
    let debounceTimeout;

    function liveSearch(query) {
      const resultsContainer = document.getElementById("movieGrid");
      if (!resultsContainer) return;

      clearTimeout(debounceTimeout);
      debounceTimeout = setTimeout(() => {
        if (query.trim().length === 0) {
          location.reload(); // Reload to show full watchlist again
          return;
        }

        resultsContainer.innerHTML = "<p style='text-align:center;'>üîÑ Searching...</p>";

        fetch(`/ajax/search?query=${encodeURIComponent(query)}`)
          .then(res => res.json())
          .then(data => {
            if (!data || data.length === 0) {
              resultsContainer.innerHTML = "<p style='text-align:center;'>üö´ No results found.</p>";
              return;
            }

            resultsContainer.innerHTML = "";
            data.forEach(movie => {
              resultsContainer.innerHTML += `
                <div class="movie-card">
                  <a href="${movie.movie_url}" target="_blank">
                    <img src="${movie.poster_url}" alt="Poster">
                  </a>
                  <h3>${movie.title}</h3>
                  <p>${movie.genre}</p>
                  <a href="${movie.movie_url}" target="_blank" class="watch-btn">‚ñ∂Ô∏è Watch Now</a>
                </div>
              `;
            });
          })
          .catch(() => {
            resultsContainer.innerHTML = "<p style='text-align:center;'>‚ùå Error loading results.</p>";
          });
      }, 400);
    }
  </script>
</body>
</html>
