<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Movies</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" />
  <link rel="stylesheet" href="./css/style.css">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .container {
      margin-top: 40px;
    }

    table img {
      width: 60px;
      height: auto;
      object-fit: cover;
      border-radius: 4px;
    }

    a.icon i {
      font-size: 18px;
      margin: 0 8px;
      color: #333;
      transition: color 0.3s ease, transform 0.3s ease;
    }

    a.icon:hover i {
      color: red;
      transform: scale(1.2);
    }

    /* Make table responsive and avoid horizontal scroll */
    table {
      table-layout: auto;
      width: 100%;
      word-wrap: break-word;
    }

    td, th {
      white-space: nowrap;
      font-size: 14px;
      text-align: center;
    }

    @media (max-width: 768px) {
      td, th {
        font-size: 12px;
      }

      .container {
        padding: 0 10px;
      }
    }
  </style>
</head>
<body>

<div class="container">
  <h2 class="text-center mb-4" style="color:black">Movie List</h2>

  <table class="table table-bordered table-hover table-striped align-middle">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Poster</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Director</th>
        <th>Language</th>
        <th>Country</th>
        <th>Runtime</th>
        <th>Release Date</th>
        <th>Trailer</th>
        <th>Movie</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% if (movies.length === 0) { %>
        <tr>
          <td colspan="13" class="text-center"><h5>No movies found.</h5></td>
        </tr>
      <% } else { %>
        <% movies.forEach((movie, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <% if (movie.poster_url) { %>
                <img src="<%= movie.poster_url %>" alt="Poster">
              <% } else { %>
                <img src="https://via.placeholder.com/60x90" alt="No Image">
              <% } %>
            </td>
            <td><%= movie.title %></td>
            <td><%= movie.genre %></td>
            <td><%= movie.director %></td>
            <td><%= movie.language %></td>
            <td><%= movie.country %></td>
            <td><%= movie.runtime %> min</td>
            <td><%= movie.release_date ? movie.release_date.toISOString().split('T')[0] : 'N/A' %></td>
            <td><a href="<%= movie.trailer_url %>" target="_blank">Teaser</a></td>
            <td><a href="<%= movie.movie_url %>" target="_blank">Watch</a></td>
            <td>
              <a href="/movies/editmovie/<%= movie.movie_id %>" class="icon" title="Edit">
                <i class="fa-solid fa-user-pen"></i>
              </a>
            </td>
            <td>
              <a href="/movies/deletemovie/<%= movie.movie_id %>" class="icon" title="Delete"
                 onclick="return confirm('Are you sure you want to delete this movie?');">
                <i class="fa-solid fa-trash"></i>
              </a>
            </td>
          </tr>
        <% }); %>
      <% } %>
    </tbody>
  </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
